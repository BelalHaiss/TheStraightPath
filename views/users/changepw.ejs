<% layout('layout/boilerplate')%>

    <div class="row">
        <div id='form' class="col-8 col-md-6  mx-auto">
            <h3 id="form__head" class="mb-4 ">Create New Password</h3>
            <form id="newform" method="POST" action="/users/<%= currentUser.id %>/changePW" class="needs-validation"
                novalidate>


                <div class="form-group p-1">
                    <label for="oldpassword"> Old Password </label>
                    <input type="password" class="form-control" name="password[oldpw]" aria-describedby='pw-validation'
                        id="oldpassword" required />
                    <div id="pw-validation" class="invalid-feedback">Please make sure your password contains at least (a
                        Capital
                        letter, a number and a
                        special charcter).</div>
                </div>

                <div class="form-group p-1">
                    <label for="newpassword"> New Password </label>
                    <input type="password" class="form-control" name="password[newpw]" aria-describedby='pw-validation'
                        id="newpassword" required />
                    <div id="pw-validation" class="invalid-feedback">Please make sure your password contains at least (a
                        Capital
                        letter, a number and a
                        special charcter).</div>
                </div>
                <button type="submit" class=" mt-4 d-block w-100 btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
    <script src="/js/passwordValidation.js" async></script>