<% layout('layout/boilerplate')%>
  <style>
    body {
      background: #642B73;
      /* fallback for old browsers */
      background: -webkit-linear-gradient(to right, #C6426E, #642B73);
      /* Chrome 10-25, Safari 5.1-6 */
      background: linear-gradient(to right, #C6426E, #642B73);
      /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

    }
  </style>

  <div class="row">
    <div id="form" class="col-6 mx-auto rounded p-5 ">
      <h3 class="text-center">Welcome back! </h3>
      <h1 class="text-center my-3">Sign in to your account</h1>

      <form method="POST" action="/login" class="needs-validation p-3" novalidate>
        <div class="form-group">
          <label for="email" class="fs-4 text-muted"> Email </label>
          <input type="text" class="form-control" id="email" name="username" required />
        </div>


        <div class="form-group my-4">
          <label for="password" class="fs-4 text-muted"> password </label>
          <input type="password" class="form-control" name="password" id="password" required />
        </div>

        <a href="" class="text-center d-block fs-5">Forget Your Password?</a>
        <button style="font-size: 1.5rem;" type="submit" class="btn mt-5  d-block w-50 mx-auto btn-outline-primary">Sign
          In</button>
      </form>

    </div>
  </div>