<% layout('layout/boilerplate')%>

  <form id="newform" method="POST" action="/register" class="needs-validation" novalidate>
    <div class="form-group">
      <label for="username">Enter Your Username </label>
      <input type="text" class="form-control" id="username" name="username" placeholder="Enter The username name"
        required />

    </div>
    <div class="form-group">
      <label for="email">enter Your email </label>
      <input type="email" class="form-control" name="email" id="email" aria-describedby='email-validation'
        placeholder="Enter The email Text" required />
      <div id="email-validation" class="invalid-feedback">Please Check Your Mail again.</div>

    </div>
    <div class="form-group">
      <label for="password"> Enter your password </label>
      <input type="password" class="form-control" name="password" aria-describedby='pw-validation' id="password"
        placeholder="Enter The password Text" required />
      <div id="pw-validation" class="invalid-feedback">Please make sure your password contains at least (a Capital
        letter, a number and a
        special charcter).</div>


    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>

  <script src="js/validateRegister.js" async></script>